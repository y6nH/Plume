{% extends "base" %}

{% block title %}
Login
{% endblock title %}

{% block content %}
<h1>Login</h1>
{% if message %}
<p>{{ message }}</p>
{% endif %}
<form method="post">
    <label for="email_or_name">Username or email</label>
    <input name="email_or_name">

    <label for="password">Password</label>
    <input type="password" name="password">

    <input type="submit" value="Login"/>            
</form>
{% endblock content %}
