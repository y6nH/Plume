{% extends "base" %}

{% block title %}
New post
{% endblock title %}

{% block content %}
<h1>Create a post</h1>
<form method="post">
    <label for="title">Title</label>
    <input name="title">

    <label for="content">Content</label>
    <textarea name="content"></textarea>

    <label for="license">License</label>
    <input name="license">

    <input type="submit" value="Publish"/>            
</form>
{% endblock content %}
